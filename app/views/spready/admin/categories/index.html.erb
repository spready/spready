<h1>Listing admin_categories</h1>

<table>
  <tr>
    <th>name</th>
    <th>permalink</th>
    <th>forum</th>
    <th>operator</th>
  </tr>

<% @admin_categories.each do |admin_category| %>
  <tr>
    <td><%= admin_category.name %></td>
    <td><%= admin_category.permalink %></td>
    <td><%= admin_category.forum.name %></td>
    <td>
      <%= link_to 'Show', forum_category_path(admin_category.forum, admin_category) %>
      <%= link_to 'Edit', edit_admin_category_path(admin_category) %>
      <%= link_to 'Destroy', admin_category_path(admin_category), :method => :delete, :data => { :confirm => 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_admin_category_path %>
